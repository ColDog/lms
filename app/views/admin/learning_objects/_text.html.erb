<%= form_for :learning_object,
						 url: obj ? admin_learning_object_path(obj) : admin_learning_objects_path,
						 method: obj ? 'put' : 'post', remote: 'true', html: {id: "obj_#{obj.try(:id)}"} do |f| %>
	<fieldset>
		<legend>Text Field</legend>
		<%= f.hidden_field :category, value: 'text' %>
		<%= f.text_field :name, placeholder: 'name' %>

		<textarea name="learning_object[fields][text]" rows="5" placeholder="Type your text here!"><%= obj.get_field('text') %></textarea>
		<%= f.submit 'Save', 'data-disable-with': 'saving...', class: 'btn btn-blue' %>
		<%= link_to 'Delete', admin_learning_object_path(obj), method: 'delete', class: 'btn btn-red' %>
	</fieldset>
<% end %>
