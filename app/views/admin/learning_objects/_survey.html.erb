<%= form_for :learning_object,
						 url: obj ? admin_learning_object_path(obj) : admin_learning_objects_path,
						 method: obj ? 'put' : 'post', class: 'forms', remote: 'true', html: {id: "obj_#{obj.try(:id)}"}  do |f| %>
	<fieldset>
		<legend>Survey</legend>
		<%= f.hidden_field :category, value: 'survey' %>
		<%= f.text_field :name, placeholder: 'name' %>

		<div id="surv<%= obj.try(:id) %>"></div>

		<button onclick="addLongText('#surv<%= obj.try(:id) %>')" class="btn">Long Answer Question</button>
		<button onclick="addShortText('#surv<%= obj.try(:id) %>')" class="btn">Short Answer Question</button>
		<button onclick="addNumber('#surv<%= obj.try(:id) %>')" class="btn">Number Question</button>
		<button onclick="addMC('#surv<%= obj.try(:id) %>')" class="btn">Multiple Choice Question</button>

		<hr>
		<%= f.submit 'Save', 'data-disable-with': 'saving...', class: 'btn btn-green' %>
		<%= link_to 'Delete', admin_learning_object_path(obj), method: 'delete', class: 'btn btn-red' %>
	</fieldset>
<% end %>

